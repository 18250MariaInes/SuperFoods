<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity"
        android:orientation="vertical"
        android:background="@color/backgroundBeige">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:id="@+id/LinearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/colorVerde">


                    <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="30dp"
                            android:padding="10dp"
                            android:tint="@color/white"
                            android:src="@drawable/register"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="REGISTRO"
                            android:textColor="@color/white"
                            android:textSize="22sp"/>
                </LinearLayout>

                //Input nombre
                <RelativeLayout
                        android:id="@+id/relativeLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/LinearLayout1"
                        android:layout_marginTop="100dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp">

                        <ImageView
                                android:id="@+id/userIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@color/colorVerde"
                                android:padding="8dp"
                                android:src="@drawable/user"
                                android:tint="@color/white"/>

                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName"
                                android:hint="Nombre"
                                android:textColorHint="@color/colorTurquesa"
                                android:layout_alignBottom="@+id/userIcon"
                                android:layout_toRightOf="@+id/userIcon"
                                android:layout_alignParentTop="true"
                                android:id="@+id/txtName"
                                android:paddingLeft="20dp"
                                android:textSize="15sp"/>

                </RelativeLayout>

                //Input Apellido
                <RelativeLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relativeLayout1"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp">

                    <ImageView
                            android:id="@+id/lastIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/colorVerde"
                            android:padding="8dp"
                            android:src="@drawable/user"
                            android:tint="@color/white"/>

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:hint="Apellido"
                            android:textColorHint="@color/colorTurquesa"
                            android:id="@+id/txtLastName"
                            android:layout_alignBottom="@+id/lastIcon"
                            android:layout_toRightOf="@+id/lastIcon"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="20dp"
                            android:textSize="15sp"/>

                </RelativeLayout>

                //Input mail
                <RelativeLayout
                        android:id="@+id/relativeLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relativeLayout2"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp">

                    <ImageView
                            android:id="@+id/mailIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/colorVerde"
                            android:padding="8dp"
                            android:src="@drawable/correo"
                            android:tint="@color/white"/>

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:hint="Correo"
                            android:textColorHint="@color/colorTurquesa"
                            android:id="@+id/txtEmail"
                            android:layout_alignBottom="@+id/mailIcon"
                            android:layout_toRightOf="@+id/mailIcon"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="20dp"
                            android:textSize="15sp"/>

                </RelativeLayout>

                //Input Password
                <RelativeLayout
                        android:id="@+id/relativeLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relativeLayout3"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp">

                    <ImageView
                            android:id="@+id/passIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/colorVerde"
                            android:padding="8dp"
                            android:src="@drawable/lock"
                            android:tint="@color/white"/>

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:hint="ContraseÃ±a"
                            android:textColorHint="@color/colorTurquesa"
                            android:id="@+id/txtPassword"
                            android:layout_alignBottom="@+id/passIcon"
                            android:layout_toRightOf="@+id/passIcon"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="20dp"
                            android:textSize="15sp"/>

                </RelativeLayout>

                //CheckBox Terminos y Condiciones
                <CheckBox
                        android:id="@+id/checkCondiciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/relativeLayout4"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:text="Acepto los Terminos y Condiciones"/>

                //Boton de registrarse
                <Button
                        android:onClick="register"
                        android:text="Crear Cuenta"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_below="@id/checkCondiciones"
                        android:background="@color/colorVerde"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/button"/>


            </RelativeLayout>

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:background="@color/backgroundBeige"/>



</RelativeLayout>