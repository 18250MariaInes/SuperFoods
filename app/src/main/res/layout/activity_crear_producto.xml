<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CrearProducto"
        android:background="@color/backgroundBeige">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColorHint="@color/colorTurquesa"
            android:id="@+id/nombreptxt" android:hint="Nombre Producto"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColorHint="@color/colorTurquesa"
            android:ems="10"
            android:id="@+id/desctxt" android:hint="DescripciÃ³n"/>
    <EditText
            android:layout_width="match_parent"
            android:textColorHint="@color/colorTurquesa"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/preciotxt" android:hint="QPrecio"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColorHint="@color/colorTurquesa"
            android:ems="10"
            android:id="@+id/contactotxt" android:hint="Tu correo de contacto"/>
    <Button
            android:text="CREAR"
            android:layout_width="match_parent"
            android:onClick="Crear"
            android:background="@color/colorVerde"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" android:id="@+id/CrearB"/>
</LinearLayout>
