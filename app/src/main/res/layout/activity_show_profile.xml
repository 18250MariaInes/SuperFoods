<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShowProfileActivity"
        android:orientation="vertical"
android:background="@color/backgroundBeige">


    <TextView
            android:text="Nombre:"
            android:textColor="@color/colorTurquesa"
            android:textStyle="bold"
            android:scrollbarSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/TextViewN"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content" android:id="@+id/txtNombre"/>
    <TextView
            android:text="Correo:"
            android:textColor="@color/colorTurquesa"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:scrollbarSize="22dp"
            android:layout_height="wrap_content" android:id="@+id/TextViewA"/>
    <TextView
            android:text="TextView"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtapellido"/>
    <Button
            android:text="Ver tus recetas"
            android:layout_width="match_parent"
            android:background="@color/colorVerde"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" android:id="@+id/VerRecetas" android:onClick="mostrarRecetas"/>
    <Button
            android:text="Guardar nueva receta"
            android:layout_width="match_parent"
            android:background="@color/colorVerde"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" android:id="@+id/GuardaReceta" android:onClick="crearReceta"/>
</LinearLayout>