<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShowProfileActivity"
        android:background="@color/backgroundBeige">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="22sp"
                            android:text="Nombre"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtNombre"/>

                        <TextView
                            android:text="Mail"
                            android:textSize="14sp"
                            android:layout_below="@id/txtNombre"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/colorTurquesa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtapellido"/>

                        <ImageView
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_person_black_24dp"
                                android:layout_width="62dp"
                                android:layout_height="62dp"/>
                </RelativeLayout>
                <GridLayout
                        android:columnCount="2"
                        android:rowCount="2"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="12dp"
                            android:layout_margin="12dp">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:padding="16dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                            android:src="@drawable/cooking"
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:id="@+id/VerRecetas"
                                            android:onClick="mostrarRecetas"/>

                                    <TextView
                                            android:layout_marginTop="12dp"
                                            android:textColor="#6f6f6f"
                                            android:textSize="18sp"
                                            android:text="Recetas"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="12dp"
                            android:layout_margin="12dp">
                        <LinearLayout
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                    android:src="@drawable/cooking"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:id="@+id/GuardaReceta"
                                    android:onClick="crearReceta"/>

                            <TextView
                                    android:layout_marginTop="12dp"
                                    android:textColor="#6f6f6f"
                                    android:textSize="18sp"
                                    android:text="Crear Receta"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </GridLayout>
        </LinearLayout>
</ScrollView>
